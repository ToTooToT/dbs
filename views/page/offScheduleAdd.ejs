<% layout('../index') %>
<div class="border-head" style="">
    <h2><i class="fa fa-angle-right"></i><%= title %></h2>
</div>
<div style="background: #fff; box-shadow: 1px 1px 3px 0 #A4AABA;">
    <form action="/offScheduleAdd" method="post">
        <table class="table table-bordered">
            <tr>
                <td class="col-lg-1">제목</td>
                <td colspan="4"><input type="text" name="sche_name"/></td>
            </tr>

            <tr>
                <td>작성자</td>
                <td class="col-lg-1">공식스케줄시작날짜</td>
                <td class="col-lg-1">공식스케줄종료날짜</td>
                <td class="col-lg-1">공식스케줄시작시간</td>
                <td class="col-lg-1">공식스케줄종료시간</td>
            </tr>
            <tr>
                <td><%= name %></td>
                <td><input type="text" name="ofc_sche_start_date"/></td>
                <td><input type="text" name="ofc_sche_end_date"/></td>
                <td><input type="text" name="ofc_sche_start_time"/></td>
                <td><input type="text" name="ofc_sche_end_time"/></td>
            </tr>
            <tr>
                <td style="vertical-align: middle;">참여학생</td>
                <td colspan="4">
                    학번<input type="text" name="s_num1"/><br>
                    학번<input type="text" name="s_num2"/><br>
                    학번<input type="text" name="s_num3"/><br>
                </td>
            </tr>
        </table>
        <button type="submit">등록</button>
    </form>
</div>